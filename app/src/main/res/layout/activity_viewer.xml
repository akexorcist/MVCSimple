<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/global_margin_padding"
    android:paddingLeft="@dimen/global_margin_padding"
    android:paddingRight="@dimen/global_margin_padding"
    android:paddingTop="@dimen/global_margin_padding"
    tools:context="com.akexorcist.mvpsimple.module.viewer.ViewerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prev" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_feed_viewer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
